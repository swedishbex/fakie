<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="fakie.ParkLetters">
	
		<StackLayout BackgroundColor="#FFCD00">
			<Label Text="PARKER" TextColor="Black" Font="Open Sans" FontAttributes="Bold" FontSize="32" HorizontalOptions="CenterAndExpand" Margin="0,50,0,0"/>

			<ListView x:Name="ButtonList" Margin="50, 50, 50, 50" SeparatorVisibility="None" BackgroundColor="Transparent" RowHeight="60">
				<ListView.ItemTemplate>
            		<DataTemplate>
                		<ViewCell>
							<ViewCell.View>
                            	<Grid ColumnSpacing="0">
	                                <Grid.ColumnDefinitions>
	                                    <ColumnDefinition Width="*" />
	                                    <ColumnDefinition Width="*" />
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="*" />
	                                </Grid.ColumnDefinitions>
									<Button 
										Text="{Binding ButtonText1}"
										TextColor="White" 
										Font="Open Sans"
										FontSize="32"
										FontAttributes="Bold"
										Grid.Column="0"
										Clicked="goCity"
										BackgroundColor="Black"
										HorizontalOptions="FillAndExpand"
										BorderRadius="0"
									/>
									<Button 
										Text="{Binding ButtonText2}"
										TextColor="White" 
										Font="Open Sans"
										FontSize="32"
										FontAttributes="Bold"
										Grid.Column="1"
										Clicked="goCity"
										BackgroundColor="Black"
										HorizontalOptions="FillAndExpand"
										BorderRadius="0"
									/>
									<Button 
										Text="{Binding ButtonText3}"
										TextColor="White" 
										Font="Open Sans"
										FontSize="32"
										FontAttributes="Bold"
										Grid.Column="2"
										Clicked="goCity"
										BackgroundColor="Black"
										HorizontalOptions="FillAndExpand"
										BorderRadius="0"
									/>
									<Button 
										Text="{Binding ButtonText4}"
										TextColor="White" 
										Font="Open Sans"
										FontSize="32"
										FontAttributes="Bold"
										Grid.Column="3"
										Clicked="goCity"
										BackgroundColor="Black"
										HorizontalOptions="FillAndExpand"
										BorderRadius="0"
									/>
								</Grid>
							</ViewCell.View>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>

</ContentPage>
