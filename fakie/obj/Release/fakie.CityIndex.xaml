<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="fakie.CityIndex">


	
	<StackLayout BackgroundColor="#FFCD00">

			<Label x:Name="lblLetter" Text="" TextColor="Black" Font="Open Sans" FontAttributes="Bold" FontSize="32" HorizontalOptions="CenterAndExpand" Margin="0,50,0,0" /> 

			<ListView
				x:Name="CityList"
				Margin="50, 50, 50, 50"
				SeparatorVisibility="None" 
				BackgroundColor="Transparent" 
				RowHeight="60"

			> 
				
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<Button
							Text="{Binding}"
							TextColor="White"
							BackgroundColor="Black"
							Font="Open Sans"
							FontSize="20"
							FontAttributes="Bold"
							Margin="0,0,0,10"
							Clicked="goParkIndex"
							BorderRadius="0" />
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>	


		

				</ListView>

			
			</StackLayout>

</ContentPage>
